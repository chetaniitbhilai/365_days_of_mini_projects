{
    "manifest_version": 3,
    "name": "YouTube Speed Controller",
    "version": "1.0",
    "description": "Increase or decrease YouTube video playback speed.",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["https://www.youtube.com/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  